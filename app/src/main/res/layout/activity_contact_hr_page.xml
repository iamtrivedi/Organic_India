<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".ui.activites.contact_hr.Contact_hr_page">

    <com.organic.india.common.Toolbar_view
        app:title="Regularize Attendance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:gravity="center"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/black"
            android:text="To regularize attendance please contact your HR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_proceed"
            android:text="Go Back"
            android:textSize="@dimen/_15sdp"
            android:textColor="@color/white"
            android:gravity="center"
            android:onClick="go_back"
            android:backgroundTint="@color/purple_200"
            android:background="@drawable/stock_grey"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_35sdp"/>

    </LinearLayout>


</LinearLayout>