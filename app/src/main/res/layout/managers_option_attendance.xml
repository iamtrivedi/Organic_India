<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/ll_manager_attendance_option"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:visibility="gone"
    android:background="@color/purple_700"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_request_attendance_report"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_toLeftOf="@+id/tv_attendance_count"
            android:padding="@dimen/_10sdp"
            android:text="Attendance Request"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_attendance_count"
            android:background="@drawable/circle"
            android:text="-"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_team_attendance_report"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Team Attendance Report"
        android:padding="@dimen/_10sdp"
        android:visibility="gone"
        android:layout_marginLeft="@dimen/_10sdp"
        android:textColor="@color/white"
        />

</LinearLayout>