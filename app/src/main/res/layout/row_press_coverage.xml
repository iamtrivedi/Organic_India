<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/ll_row_line"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="@dimen/_20sdp"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_detail_holder"
            android:layout_toLeftOf="@+id/iv_view"
             android:layout_marginRight="@dimen/_5sdp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                        <TextView
                            android:textSize="@dimen/_10sdp"
                            android:textColor="@color/black"
                            android:text="Emp-Id"
                            android:textStyle="bold"
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/tv_index"
                            android:textSize="@dimen/_10sdp"
                            android:textColor="@color/black"
                            android:text="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                        <TextView
                            android:textSize="@dimen/_10sdp"
                            android:textColor="@color/black"
                            android:text="Caption"
                            android:textStyle="bold"
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/tv_caption"
                            android:textSize="@dimen/_10sdp"
                            android:textColor="@color/black"
                            android:singleLine="true"
                            android:text="OIPL Code of Conduct 01.04.2021"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                        <TextView
                            android:textSize="@dimen/_10sdp"
                            android:textColor="@color/black"
                            android:text="Added by"
                            android:textStyle="bold"
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/tv_addedby"
                            android:textSize="@dimen/_10sdp"
                            android:textColor="@color/black"
                            android:text="Admin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                        <TextView
                            android:textSize="@dimen/_10sdp"
                            android:textColor="@color/black"
                            android:text="Last updated at"
                            android:textStyle="bold"
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/tv_updated_at"
                            android:textSize="@dimen/_10sdp"
                            android:textColor="@color/black"
                            android:text="20 May 2021"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                </LinearLayout>

        </LinearLayout>

    <ImageView
        android:id="@+id/iv_view"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_50sdp"
        android:padding="@dimen/_10sdp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/view_press_cov" />



</RelativeLayout>