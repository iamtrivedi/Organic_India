<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_20sdp"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/background_pattern"
    tools:context=".ui.activites.login.Login">

    <ImageView
        android:src="@drawable/transaparent_logo"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/start_session"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/mail"
            android:padding="@dimen/_5sdp"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"/>
        <EditText
            android:id="@+id/et_email"
            android:hint="enter your E-mail"
            android:textSize="@dimen/_10sdp"
            android:textColorHint="#B3ADAD"
            android:inputType="textEmailAddress"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/_10sdp"
            android:backgroundTint="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </LinearLayout>
    <TextView
        android:background="#B3ADAD"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:layout_marginTop="@dimen/_20sdp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/key"
            android:padding="@dimen/_5sdp"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"/>
        <EditText
            android:id="@+id/et_password"
            android:hint="password"
            android:textSize="@dimen/_10sdp"
            android:textColorHint="#B3ADAD"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/_10sdp"
            android:backgroundTint="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </LinearLayout>
    <TextView
        android:background="#B3ADAD"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <TextView
        android:id="@+id/tv_proceed"
        android:text="Proceed"
        android:textSize="@dimen/_15sdp"
        android:textColor="@color/white"
        android:gravity="center"
        android:backgroundTint="@color/purple_200"
        android:background="@drawable/stock_grey"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_35sdp"/>

    <RelativeLayout
        android:visibility="gone"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            android:text="Forgot Password?"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="@dimen/_5sdp"
            android:text="Sign Up"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp" />

    </RelativeLayout>

</LinearLayout>