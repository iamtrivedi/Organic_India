<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.activites.create_leave.Create_leave_page">


    <LinearLayout
        style="@style/Widget.AppCompat.Toolbar"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:onClick="back_press"
            android:layout_marginLeft="@dimen/_10sdp"
            android:rotation="90"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/ic_arrow_bottom"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"/>

        <TextView
            android:text="Add Leave Application"
            android:textColor="#000"
            android:gravity="center"
            android:textSize="@dimen/_15sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="#DCB338"
            android:text="Enter New Application details. All field are required."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="@dimen/_15sdp"
            android:text="Leave Category *"
            android:textColor="@color/black"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:layout_marginTop="@dimen/_10sdp"
            android:padding="@dimen/_5sdp"
            android:background="@drawable/stock_grey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Select one"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/grey"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:src="@drawable/ic_arrow_bottom"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/_15sdp"
            android:weightSum="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_weight=".5"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Start Date *"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <RelativeLayout
                    android:layout_marginTop="@dimen/_10sdp"
                    android:padding="@dimen/_6sdp"
                    android:background="@drawable/stock_grey"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Select one"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/grey"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:src="@drawable/ic_calendar"
                        android:padding="@dimen/_5sdp"
                        android:layout_alignParentRight="true"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"/>

                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_weight=".5"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:text="End Date *"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <RelativeLayout
                    android:layout_marginTop="@dimen/_10sdp"
                    android:padding="@dimen/_6sdp"
                    android:background="@drawable/stock_grey"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Select one"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/grey"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:src="@drawable/ic_calendar"
                        android:padding="@dimen/_5sdp"
                        android:layout_alignParentRight="true"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"/>

                </RelativeLayout>


            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_marginTop="@dimen/_15sdp"
            android:text="Reason *"
            android:textColor="@color/black"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:layout_marginTop="@dimen/_10sdp"
            android:padding="@dimen/_5sdp"
            android:background="@drawable/stock_grey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:hint="Enter reason details..."
                android:textColorHint="@color/grey"
                android:gravity="top"
                android:backgroundTint="@android:color/transparent"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/grey"
                android:layout_centerVertical="true"
                android:minHeight="@dimen/_100sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        </RelativeLayout>

        <LinearLayout
            android:weightSum="1"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="Cancel"
                android:gravity="center"
                android:background="#CCC2C2"
                android:textColor="@color/white"
                android:layout_marginRight="@dimen/_5sdp"
                android:padding="@dimen/_10sdp"
                android:layout_width="0dp"
                android:layout_weight=".4"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginLeft="@dimen/_5sdp"
                android:background="@color/purple_700"
                android:text="Add Leave Application"
                android:gravity="center"
                android:textColor="@color/white"
                android:padding="@dimen/_10sdp"
                android:layout_width="0dp"
                android:layout_weight=".6"
                android:layout_height="wrap_content"/>

        </LinearLayout>



    </LinearLayout>


</LinearLayout>